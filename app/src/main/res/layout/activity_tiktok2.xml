<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.company.wallpaper.view.VerticalViewPager
        android:id="@+id/vvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.pnikosis.materialishprogress.ProgressWheel
        android:id="@+id/progress_wheel"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:visibility="gone"
        wheel:layout_constraintBottom_toBottomOf="parent"
        wheel:layout_constraintEnd_toEndOf="parent"
        wheel:layout_constraintStart_toStartOf="parent"
        wheel:layout_constraintTop_toTopOf="parent"
        wheel:matProg_barColor="@color/fontRed"
        wheel:matProg_progressIndeterminate="true" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0%"
        android:textColor="@color/fontRed"
        android:textSize="13sp"
        android:visibility="gone"
        wheel:layout_constraintBottom_toBottomOf="parent"
    wheel:layout_constraintEnd_toEndOf="parent"
    wheel:layout_constraintStart_toStartOf="parent"
    wheel:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:src="@drawable/icon_arrow_left_right"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</android.support.constraint.ConstraintLayout>