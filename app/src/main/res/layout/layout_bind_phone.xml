<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="23dp"
        android:layout_marginRight="23dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的微信账号 XX 通过验证"
            android:textColor="#ff999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="首次使用微信登录请先绑定手机号"
            android:textColor="#ff333333"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@drawable/shape_divider"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:showDividers="middle">

            <EditText
                android:id="@+id/et_bind_phone"
                style="@style/editstyle"
                android:layout_width="match_parent"
                android:layout_marginTop="22dp"
                android:digits="0123456789"
                android:drawableStart="@mipmap/ic_launcher"
                android:drawablePadding="8dp"
                android:hint="请输入手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/ll_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="22dp"
                android:background="@color/withe"
                android:orientation="horizontal"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp">

                <EditText
                    android:id="@+id/et_bind_code"
                    style="@style/editstyle"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:digits="0123456789"
                    android:drawableLeft="@mipmap/ic_launcher"
                    android:drawablePadding="8dp"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textSize="16sp" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="#ffdddddd" />

                <TextView
                    android:id="@+id/btn_bind_getcode"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:background="@color/withe"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="@color/fontOrange" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_bind"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_botton"
                android:text="绑 定"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</layout>
